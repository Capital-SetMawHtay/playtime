<% if item.price != '$0.00' %>
<tr>
  <%= form_tag wishlist_wishlist_items_path(@wishlist) do %>
  <%= hidden_field_tag 'name', item.title %>
  <%= hidden_field_tag 'amazon_url', item.detail_page_url %>
  <%= hidden_field_tag 'price_cents', item.price_cents %>
  <%= hidden_field_tag 'asin', item.asin %>
  <%= hidden_field_tag 'image_url', item.small_image_url %>
  <%= hidden_field_tag 'image_width', item.small_image_width %>
  <%= hidden_field_tag 'image_height', item.small_image_height %>
  <td>
    <% if item.small_image_url %>
    <%= image_tag item.small_image_url, width: item.small_image_width, height: item.small_image_height %>
    <% end %>
  </td>
  <td>
    <%= link_to item.title, item.detail_page_url, :target => "_blank" %>
  </td>
  <td>
    <%= item.price %>
  </td>
  <td>
    <%= text_field_tag "staff_message" %>
  </td>
  <td>
    <%= select_tag "qty", options_for_select(Array(0..20)) %>
  </td>
  <td>
    <%= submit_tag "Add" %>
  </td>
  <% end %>
</tr>
<% end %>
