<div class="container">
  <h2 class = "purple"><%= @user.display_name %></h2>

  <div id="user-details">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
      <%= mail_to @user.email, icon('envelope-o') %>
    </p>

    <p>
      <strong>Admin:</strong>
      <%= @user.admin? %>
    </p>

    <p>
      <strong>Managed Wishlists:</strong>

      <% if @user.wishlists.any? %>
        <ul id="user-wishlists">
          <% @user.wishlists.each do |wishlist| %>
            <li class="user-wishlist">
              <%= link_to wishlist.name, wishlist %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </p>
  </div>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

  <hr>

  <%= render partial: "partials/user_pledges" %>

</div>
