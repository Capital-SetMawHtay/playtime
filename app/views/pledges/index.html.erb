<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class = "purple">Pledges</h2>

  <table id="pledges">
    <thead>
      <tr>
        <th>Wishlist Item</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pledges.each do |pledge| %>
        <tr class="pledge">
          <td><%= pledge.wishlist_item.name %></td>
          <td><%= link_to pledge.user.display_name, pledge.user %></td>
          <td><%= link_to 'Show', pledge %></td>
          <td><%= link_to 'Edit', edit_pledge_path(pledge) %></td>
          <td><%= link_to 'Destroy', pledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Export CSV', pledges_path(format: :csv) %>
</div>
