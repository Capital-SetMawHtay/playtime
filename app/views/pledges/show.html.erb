<div class="container">
  <h2>
    <%= pronoun(@pledge.user) %> pledged to donate
    "<%= @pledge.wishlist_item.name %>"
  </h2>

  <p class="lead">Thanks for being a Hero of Play! On behalf of the children and families we serve, thank you! â™¥</p>

  <%= render @pledge %>

  <br /><br />

  <div class="row align-items-center">
    <div class="col">
      <h4>Didn't mean to pledge?
      <%= link_to 'Unpledge item', pledge_path(@pledge),
        method: :delete,
        class: 'btn btn-danger btn-sm text-right',
        data: { confirm: 'Are you sure you want to unpledge this item?' } %>
      </h4>
    </div>
  </div>

  <p>
    Manage <%= posessive_pronoun(@pledge.user, capitalize: false) %> pledge here
    or on <%= posessive_pronoun(@pledge.user, capitalize: false) %>
    <%= link_to 'user page', @pledge.user %>.
  </p>

  <%= link_to "Back to #{@pledge.wishlist.name}", @pledge.wishlist %> |
  <%= link_to "Back to user page", @pledge.user %>
</div>
