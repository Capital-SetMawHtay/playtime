<%= form_with(model: wishlist, local: true) do |form| %>
  <% if wishlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wishlist.errors.count, "error") %> prohibited this wishlist from being saved:</h2>

      <ul>
      <% wishlist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name, id: :wishlist_name %>
  </div>

  <%= form.fields_for :site_manager do |n_form| %>
    <div class="field">
      <%= n_form.label 'Site Manager:' %>
      </br>
      <% @site_mangers.each do |user| %>
        <%= n_form.label user.name %>
        <%= n_form.check_box user.id, checked: user.can_manage?(@wishlist)  %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
